{% extends 'baselayout.html.twig' %}

{% block title %}Region{% endblock %}

{% block main %}
    <h1>Region</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ region.name }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ region.presentation }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ region.country }}</td>
            </tr>
        </tbody>

    <table class="table">
        <tbody>
            <tr>
                <td> <a href="{{ path('region_index') }}">back to list</a> </td>
            </tr>

                {% if is_granted('ROLE_ADMIN') %}
                    <tr>
                         <td> <a href="{{ path('region_edit', {'id': region.id}) }}">    edit</a> </td>
                    </tr>
                    <tr>
                        <td> {{ include('couette_et_cafe/user/region/_delete_form.html.twig') }} </td>
                    </tr>

                {% endif %}
            </tr>
    </table>
{% endblock %}

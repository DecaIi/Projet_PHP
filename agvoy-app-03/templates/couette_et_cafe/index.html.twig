{% extends 'base.html.twig' %}

{% block title %}Hello CouetteEtCafeController!{% endblock %}

{% block body %}

    <h1>List of Regions</h1>

    <table class="table">
        <tbody>
        {% for region in regions %}
            <tr>
                <td><a href="{{ path('region_id', {'id': region.id}) }}">{{ region.name }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
